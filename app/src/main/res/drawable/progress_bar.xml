<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Set the color to white -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@android:color/holo_blue_light" /> <!-- Set the color you want for the progress line -->
            </shape>
        </clip>
    </item>
</layer-list>





